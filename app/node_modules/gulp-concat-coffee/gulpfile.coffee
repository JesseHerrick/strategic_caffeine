gulp = require 'gulp'
coffee = require 'gulp-coffee'

gulp.task 'compile', ->
	gulp.src('src/**/*.coffee')
		.pipe coffee()
		.pipe gulp.dest('lib')

gulp.task 'example', ->
	concat = require './lib/index'
	gulp.src(['example/src/**/*.js', 'example/src/**/*.coffee'])
		.pipe concat 'a.js', trace: true
		.pipe gulp.dest('example/dest')

gulp.task 'default', ['compile']